@model IEnumerable<HomeLoan.Models.AppUser>
@{
    ViewData["Title"] = "Registered Users";
}

<div class="admin-panel panel-users p-4 rounded-4 my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Registered Users</h3>
        <a class="btn btn-secondary" href="/Admin/Dashboard">Back to Dashboard</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No registered users yet.</div>
    }
    else
    {
        <div class="table-responsive panel-table">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Registered</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.FirstName @u.LastName</td>
                            <td>@u.Email</td>
                            <td>@u.Mobile</td>
                            <td>@u.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/Admin/UserDetails?id=@u.Id">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .admin-panel.panel-users {
        background: linear-gradient(135deg, #e0e7ff 0%, #a8d1ff 40%, #004aad 100%);
        border: 1px solid rgba(3,37,65,0.06);
        box-shadow: 0 12px 40px rgba(2,6,23,0.07);
        border-left: 6px solid #1f7a3a; /* green accent for users */
    }

    .panel-table .table thead th {
        background: #f6f8fb;
        border-bottom: 2px solid rgba(0,0,0,0.05);
    }

    .panel-table .table tbody tr:hover {
        background: #f7fff5;
        transform: translateY(-1px);
        box-shadow: 0 6px 18px rgba(2,6,23,0.03);
    }
</style>