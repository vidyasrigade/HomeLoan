    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar color change on scroll
        window.addEventListener('scroll', function() {
          const nav = document.querySelector('nav');
          if (window.scrollY > 50) nav.classList.add('scrolled');
          else nav.classList.remove('scrolled');
        });

        // Preloader fade out after page loads
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            preloader.classList.add('hidden');
            setTimeout(() => preloader.style.display = 'none', 600);
        });

        // Admin nav click state handling (keeps visual active state after click until navigation)
        document.addEventListener('DOMContentLoaded', function () {
            const adminNav = document.querySelector('.admin-nav-right');
            if (adminNav) {
                adminNav.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', function (e) {
                        // set active class visually; navigation will follow
                        adminNav.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active-admin'));
                        this.classList.add('active-admin');
                    });
                });
            }

            const chatbotBtn = document.getElementById("chatbotBtn");
            const chatbox = document.getElementById("chatbox");
            const chatMessages = document.getElementById("chatMessages");
            const userInput = document.getElementById("userInput");
            const sendBtn = document.getElementById("sendBtn");

            if (chatbotBtn) {
                chatbotBtn.addEventListener("click", () => {
                    chatbox.style.display = chatbox.style.display === "flex" ? "none" : "flex";
                });
            }

            if (sendBtn) {
                sendBtn.addEventListener("click", sendMessage);
            }
            if (userInput) {
                userInput.addEventListener("keypress", e => {
                    if (e.key === "Enter") sendMessage();
                });
            }

            function sendMessage() {
                const text = userInput?.value.trim();
                if (!text) return;

                appendMessage("user", text);
                if (userInput) userInput.value = "";

                // Simulate AI response (you can connect to OpenAI API later)
                setTimeout(() => {
                    let reply = getBotReply(text);
                    appendMessage("bot", reply);
                }, 600);
            }

            function appendMessage(sender, text) {
                const msg = document.createElement("div");
                msg.classList.add("message", sender === "user" ? "user-message" : "bot-message");
                msg.textContent = text;
                chatMessages.appendChild(msg);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function getBotReply(text) {
                text = text.toLowerCase();
                if (text.includes("loan")) return "You can apply for a home loan under the 'Apply' section.";
                if (text.includes("emi")) return "You can use our EMI Calculator to estimate your monthly payments.";
                if (text.includes("interest")) return "Our current interest rate starts at 8.5% per annum.";
                if (text.includes("hello") || text.includes("hi")) return "Hello! How can I help you today?";
                return "I'm here to assist you with home loans, EMIs, or eligibility queries.";
            }

            // Sidebar toggle (works on admin pages that include `.admin-sidebar`)
            const sidebarToggleBtn = document.getElementById('sidebarToggle');
            if (sidebarToggleBtn) {
                sidebarToggleBtn.addEventListener('click', () => {
                    document.body.classList.toggle('sidebar-collapsed');
                });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
