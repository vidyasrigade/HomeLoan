            animation: fadeIn 1s ease-in-out;
        }


        .navbar-brand img:hover {
            transform: scale(1.1);
        }

        .nav-link {
            color: white !important;
            margin-left: 10px;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        /* Admin-specific compact nav right alignment */
        .admin-nav-right {
            margin-left: auto;
            display: flex;
            gap: 0.6rem;
            align-items: center;
        }

            .admin-nav-right .nav-link {
                color: #fff !important;
                padding: .45rem .8rem;
                background: rgba(255,255,255,0.06);
                border-radius: 8px;
                transition: background .18s ease, transform .12s ease, box-shadow .18s ease;
                display: inline-flex;
                align-items: center;
                gap: .5rem;
            }

                /* active / clicked state */
                .admin-nav-right .nav-link.active-admin,
                .admin-nav-right .nav-link:active,
                .admin-nav-right .nav-link:focus {
                    background: rgba(255,255,255,0.18);
                    transform: translateY(-2px);
                    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
                    outline: none;
                }

            /* prominent logout button styling */
            .admin-nav-right .logout {
                background: linear-gradient(90deg,#ff6b35,#ff8c42);
                color: #111 !important;
                font-weight: 700;
                padding: .5rem .95rem;
                border-radius: 10px;
                box-shadow: 0 10px 26px rgba(255,140,66,0.18);
                border: 1px solid rgba(255,255,255,0.12);
                transition: transform .12s ease, box-shadow .18s ease, filter .12s ease;
            }

                .admin-nav-right .logout:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 16px 34px rgba(255,140,66,0.22);
                    filter: brightness(1.02);
                    color: #080808 !important;
                }

                .admin-nav-right .logout:active {
                    transform: translateY(1px);
                    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
                }

        /* small screens tweak to keep right-aligned links stacked */
        @@media (max-width: 575px) {
            .admin-nav-right

        {
            gap: .4rem;
        }

        .admin-nav-right .nav-link {
            padding: .45rem .6rem;
            font-size: .95rem;
        }

        }

        /* Sidebar toggle button (admin navbar) */
