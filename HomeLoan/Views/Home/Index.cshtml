@section Scripts {
    <script>
        document.getElementById('queryForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const name = document.getElementById('queryName').value;
            const email = document.getElementById('queryEmail').value;
            const message = document.getElementById('queryMessage').value;

            if (name && email && message) {
                document.getElementById('queryResponse').textContent = "✅ Thank you, " + name + "! Your query has been submitted successfully.";
                this.reset();
            } else {
                document.getElementById('queryResponse').textContent = "⚠️ Please fill in all fields.";
            }
        });

        function computeEMI(P, r, y){
          var rate = r/100/12, n = y*12;
          var emi = (P*rate*Math.pow(1+rate,n)) / (Math.pow(1+rate,n)-1);
          return emi.toFixed(2);
        }
        const amt=document.getElementById("amtRange"), yrs=document.getElementById("yrsRange"), rate=document.getElementById("rateRange");
        function refresh(){
          const emi = computeEMI(+amt.value,+rate.value,+yrs.value);
          document.getElementById("amtLabel").innerText=Number(amt.value).toLocaleString();
          document.getElementById("yrsLabel").innerText=yrs.value;
          document.getElementById("rateLabel").innerText=rate.value;
          document.getElementById("emiVal").innerText=Number(emi).toLocaleString();
        }
        [amt,yrs,rate].forEach(r=>r.addEventListener('input',refresh));
        refresh();
            document.addEventListener('DOMContentLoaded', function () {
            // Highlight selected box (loan boxes)
            window.selectBox = function(element) {
                document.querySelectorAll('.loan-box').forEach(box => box.classList.remove('selected'));
                element.classList.add('selected');
            };

            // Safe carousel init (only if bootstrap and element present)
            try {
                var myCarousel = document.querySelector('#loanCarousel');
                if (window.bootstrap && myCarousel) {
                    new bootstrap.Carousel(myCarousel, {
                        interval: false,  // disable auto move
                        ride: false,
                        pause: true,
                        wrap: true
                    });
                }
            } catch (e) {
                console.warn('Carousel init failed:', e);
            }

            // Prepare service-box backgrounds immediately and enable keyboard accessibility
            document.querySelectorAll('.service-box').forEach(box => {
                const bg = box.getAttribute('data-bg');
                if (bg) {
                    // Set CSS variable so ::before uses the image immediately (no click required)
                    // If inline style already set, this will overwrite it with the same value — safe.
                    box.style.setProperty('--bg-img', `url("${bg}")`);
                    // optional hover opacity can be customized per-box via data attribute if desired
                    if (box.hasAttribute('data-hover-opacity')) {
                        box.style.setProperty('--hover-opacity', box.getAttribute('data-hover-opacity'));
                    }
                    // Add keyboard handlers so focus shows the background
                    box.addEventListener('focus', () => box.classList.add('bg-visible'));
                    box.addEventListener('blur', () => box.classList.remove('bg-visible'));
                    // For pointer users keep the same class management
                    box.addEventListener('mouseenter', () => box.classList.add('bg-visible'));
                    box.addEventListener('mouseleave', () => box.classList.remove('bg-visible'));
                }
            });
        });
            (function () {
            // animate stat fills when section becomes visible
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (!entry.isIntersecting) return;
                    entry.target.querySelectorAll('.stat-fill').forEach(el => {
                        const pct = parseInt(el.getAttribute('data-percent') || '0', 10);
                        // progressive fill animation
                        requestAnimationFrame(() => el.style.width = pct + '%');
                        // set aria value
                        const bar = el.closest('.stat-bar');
                        if (bar) bar.setAttribute('aria-valuenow', pct);
                    });
                    observer.unobserve(entry.target);
                });
            }, { threshold: 0.25 });

            document.addEventListener('DOMContentLoaded', function() {
                const section = document.querySelector('.about-stats-section');
                if (section) observer.observe(section);
            });
        })();
    </script>
