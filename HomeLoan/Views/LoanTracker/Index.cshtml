@{
    ViewData["Title"] = "Track Loan";
}

<div class="forgot-bg d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 0; padding-bottom: 0;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm p-4" style="border:1px solid #000000;">
                    <h3 class="mb-3 text-primary text-center">Track Your Loan</h3>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label form-label-shadow">Application ID</label>
                            <input type="number" name="id" class="form-control input-shadow" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label form-label-shadow">Date of Birth</label>
                            <input type="date" name="dob" class="form-control input-shadow" required />
                        </div>
                        <button class="btn btn-primary w-100">Check Status</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .forgot-bg {
        min-height: 100vh;
        background: linear-gradient(135deg, #e0e7ff 0%, #a8d1ff 40%, #004aad 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        margin-top: 0 !important;
        margin-bottom: 0 !important;
    }
    .card {
        border-radius: 12px;
    }
    .input-shadow {
        box-shadow: 0 0 8px rgba(0,0,0,0.15);
        border: 1px solid #ced4da;
        outline: none;
        transition: box-shadow 0.2s, border-color 0.2s;
    }
    .input-shadow:focus {
        border-color: #0a1a3c;
        box-shadow: 0 0 12px rgba(10,26,60,0.25);
        outline: 1px solid #0a1a3c;
    }
    .form-label-shadow {
        text-shadow: 0 1px 1px rgba(10,26,60,0.15);
    }
</style>
